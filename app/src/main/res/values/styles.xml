<resources>
    <!--=======================-->
    <!--Widgets.TextInputLayout-->
    <!--=======================-->

    <style name="Theme.TextInputLayout.FilledBox" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="materialThemeOverlay">@style/ThemeOverlay.TextInputEditText.FilledBox</item>
        <item name="boxBackgroundColor">@android:color/transparent</item>
        <item name="boxStrokeColor">?attr/colorSecondary</item>
        <item name="hintTextColor">?attr/colorSecondary</item>
    </style>

    <style name="ThemeOverlay.TextInputEditText.FilledBox" parent="ThemeOverlay.MaterialComponents.TextInputEditText.FilledBox">
        <item name="colorControlActivated">?attr/colorSecondary</item>
    </style>


    <!--===========-->
    <!--AlertDialog-->
    <!--===========-->

    <style name="Theme.AlertDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="title">?attr/colorPrimary</item>
        <item name="buttonBarPositiveButtonStyle">@style/Theme.Widget.Button.TextButton</item>
        <item name="buttonBarNegativeButtonStyle">@style/Theme.Widget.Button.TextButton</item>
        <item name="buttonBarNeutralButtonStyle">@style/Theme.Widget.Button.TextButton</item>
        <item name="materialAlertDialogTitleTextStyle">@style/Theme.AlertDialog.Title.Text</item>
        <item name="colorAccent">?colorSecondary</item>
    </style>

    <style name="Theme.AlertDialog.Title.Text" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textAppearance">@style/Theme.AlertDialog.Title.TextAppearance</item>
    </style>

    <style name="Theme.AlertDialog.Title.TextAppearance" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>


    <!--===============-->
    <!--Text Appearance-->
    <!--===============-->

    <style name="Theme.TextAppearance" parent="@android:style/TextAppearance" />

    <style name="Theme.TextAppearance.Title">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="Theme.TextAppearance.Subtitle1">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="Theme.TextAppearance.Subtitle2">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="Theme.TextAppearance.Body1">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="Theme.TextAppearance.Body2">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>


    <!--==============-->
    <!--Widgets.Button-->
    <!--==============-->

    <style name="Theme.Widget.Button.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">?attr/colorAccent</item>
        <item name="android:textAllCaps">false</item>
        <item name="rippleColor">?attr/colorAccent</item>
    </style>

    <style name="Theme.Widget.Button.TextButton.NoColor" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:gravity">start</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:textColor">?colorOnPrimary</item>
        <item name="iconTint">?colorOnPrimary</item>
        <item name="rippleColor">?colorOnPrimary</item>
        <item name="iconPadding">16dp</item>
    </style>

    <style name="Theme.Widget.Button.Icon" parent="Widget.MaterialComponents.Button.OutlinedButton.Icon">
        <item name="android:minHeight">0dp</item>
        <item name="android:paddingBottom">4dp</item>

        <item name="elevation">0dp</item>

        <item name="android:textSize">12sp</item>
        <item name="textAllCaps">false</item>
        <item name="cornerRadius">16dp</item>

        <item name="iconTint">?attr/colorControlNormal</item>
        <item name="rippleColor">?attr/colorControlNormal</item>
        <item name="android:textColor">?attr/colorOnBackground</item>
    </style>

    <style name="Theme.Widget.Button.Icon.Textless">
        <item name="android:minWidth">0dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="iconPadding">0dp</item>
        <item name="strokeWidth">0dp</item>
    </style>


    <!--=================-->
    <!--Widgets.AppBarLayout-->
    <!--=================-->

    <style name="Theme.Widget.AppBarLayout" parent="Widget.Design.AppBarLayout">
        <item name="android:fitsSystemWindows">true</item>
        <item name="statusBarForeground">?attr/colorPrimary</item>
    </style>
</resources>
