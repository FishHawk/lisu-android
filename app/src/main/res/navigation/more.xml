<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph_more"
    app:startDestination="@+id/nav_more">

    <fragment
        android:id="@+id/nav_more"
        android:name="com.fishhawk.driftinglibraryandroid.ui.more.MoreFragment"
        android:label="@string/label_more">
        <action
            android:id="@+id/action_more_to_server"
            app:destination="@id/nav_server" />

        <action
            android:id="@+id/action_more_to_setting_general"
            app:destination="@id/nav_setting_general" />
        <action
            android:id="@+id/action_more_to_setting_reader"
            app:destination="@id/nav_setting_reader" />
        <action
            android:id="@+id/action_more_to_setting_advanced"
            app:destination="@id/nav_setting_advanced" />

        <action
            android:id="@+id/action_more_to_about"
            app:destination="@id/nav_about" />
    </fragment>

    <fragment
        android:id="@+id/nav_server"
        android:name="com.fishhawk.driftinglibraryandroid.ui.server.ServerFragment"
        android:label="@string/label_server"
        tools:layout="@layout/server_fragment" />

    <fragment
        android:id="@+id/nav_setting_general"
        android:name="com.fishhawk.driftinglibraryandroid.ui.more.SettingGeneralFragment"
        android:label="@string/label_settings_general" />

    <fragment
        android:id="@+id/nav_setting_reader"
        android:name="com.fishhawk.driftinglibraryandroid.ui.more.SettingReaderFragment"
        android:label="@string/label_settings_reader" />

    <fragment
        android:id="@+id/nav_setting_advanced"
        android:name="com.fishhawk.driftinglibraryandroid.ui.more.SettingAdvancedFragment"
        android:label="@string/label_settings_advanced" />

    <fragment
        android:id="@+id/nav_about"
        android:name="com.fishhawk.driftinglibraryandroid.ui.more.AboutFragment"
        android:label="@string/label_about" />
</navigation>