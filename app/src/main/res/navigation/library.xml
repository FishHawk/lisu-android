    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph_library"
    app:startDestination="@+id/nav_library">

    <fragment
        android:id="@+id/nav_library"
        android:name="com.fishhawk.driftinglibraryandroid.ui.library.LibraryFragment"
        tools:layout="@layout/library_fragment">

        <action
            android:id="@+id/action_to_gallery"
            app:destination="@id/nav_graph_gallery" />
    </fragment>

    <include app:graph="@navigation/gallery" />
</navigation>