<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/colorBackground"
    android:orientation="vertical"
    android:padding="16dp">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/sync_source_button"
        style="@style/Theme.Widget.Button.TextButton.NoColor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sync source"
        android:textColor="?attr/colorOnBackground"
        app:icon="@drawable/ic_baseline_refresh_24"
        app:iconTint="?attr/colorOnBackground" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/delete_source_button"
        style="@style/Theme.Widget.Button.TextButton.NoColor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Delete source"
        android:textColor="?attr/colorOnBackground"
        app:icon="@drawable/ic_baseline_delete_forever_24"
        app:iconTint="?attr/colorOnBackground" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/edit_metadata_button"
        style="@style/Theme.Widget.Button.TextButton.NoColor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Edit metadata"
        android:textColor="?attr/colorOnBackground"
        app:icon="@drawable/ic_baseline_edit_24"
        app:iconTint="?attr/colorOnBackground" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/edit_cover_button"
        style="@style/Theme.Widget.Button.TextButton.NoColor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Edit cover"
        android:textColor="?attr/colorOnBackground"
        app:icon="@drawable/ic_baseline_edit_24"
        app:iconTint="?attr/colorOnBackground" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/save_cover_button"
        style="@style/Theme.Widget.Button.TextButton.NoColor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save cover"
        android:textColor="?attr/colorOnBackground"
        app:icon="@drawable/ic_baseline_file_download_24"
        app:iconTint="?attr/colorOnBackground" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/share_cover_button"
        style="@style/Theme.Widget.Button.TextButton.NoColor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Share cover"
        android:textColor="?attr/colorOnBackground"
        app:icon="@drawable/ic_baseline_share_24"
        app:iconTint="?attr/colorOnBackground" />
</LinearLayout>
